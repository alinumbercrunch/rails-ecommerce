<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">
    Welcome to ShoppiSheep</h1>
    <p class="text-xl mb-8">Your one stop shop for all your e-commerce needs!</p>
    <%= link_to "Shop now", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="gap-10 mt-8 flex justify-center">
  <% @main_categories.each do |category| %>
    <%= link_to user_category_path(category) do %>
      <div class="overflow-hidden bg-white shadow-md">
        <%= category.image.present? ? image_tag(category.image, class: "max-w-lg h-128") : image_tag("https://via.placeholder.com/70") %>
        <div class="p-4 flex justify-between items-end relative">
          <div>
            <%= category.name %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="bg-gray-100 py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Customer reviews</h2>
    <div class="flex flex-wrap">
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow  py-4 px-4">
         <p class="text-gray-800 text-base mb-4">ShoppiSheep is an amazing place to find your favorite item!</p>
        <p class="text-gray-500 text-xs">
        - Maehc Allister
        </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow  py-4 px-4">
          <p class="text-gray-800 text-base mb-4">The new Amazon of Japan, great recommendation!</p>
        <p class="text-gray-500 text-xs">
          - Shipito Allen
        </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow  py-4 px-4">
          <p class="text-gray-800 text-base mb-4">The best online shopping place in Asia! Please try it out!</p>
        <p class="text-gray-500 text-xs">
          - Takamura Hitsuji
        </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-gray-500 text-white my-10 text-center py-20">
  <h2 class="text-3xl font-bold mb-6">Stay updated</h2>
  <p class="mb-8">Subscribe to our newsletter for new updates and offers</p>
  <%= form_with url: root_path, method: :post, local:true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-800" %>
    <%= submit_tag  "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>

</div>
