<h1 class="text-4xl font-bold text-center my-8">Category Show Page</h1>
<div class="min-h-screen flex justify-center bg-gray-100">
  <div class="flex flex-wrap flex-col mt-6">
    <h2 class="text-lg text-gray-800">Filter</h2>
  </div>
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @products.empty? %>
      <p class="text-2xl text-left text-gray-800">No products found</p>
    <% else %>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="overflow-hidden bg-white shadow-lg rounded-lg">
            <%= product.images.first ? image_tag(product.images.first.variant(:medium), class: "w-full h-64 object-cover rounded") : image_tag("https://via.placeholder.com/70", class: "w-full h-64 object-cover rounded") %>
            <div class="p-6 flex justify-between items-end relative">
              <div class="text-lg font-semibold">
                <%= product.name %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
