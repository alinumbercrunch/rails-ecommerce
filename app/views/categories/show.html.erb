<h1 class="text-4xl font-bold text-center my-8">Category Show Page</h1>
<div class="min-h-screen flex justify-center bg-gray-100">
  <div class="flex flex-col items-center bg-gray-100 p-4 rounded-lg shadow-md">
    <h2 class="text-lg text-gray-800 font-medium mb-4">Search by price</h2>
    <%= form_with url: category_path(@category), method: :get, class: "flex flex-col gap-2" do |form| %>
      <% form.label :min, class: "text-sm font-medium text-gray-700" %>
      <%= form.number_field :min, placeholder: "Min Price", class: "border border-gray-800 rounded-md p-2 w-24" %>
      <% form.label :max, class: "text-sm font-medium text-gray-700" %>
      <%= form.number_field :max, placeholder: "Max Price", class: "border border-gray-800 rounded-md p-2 w-24" %>
      <%= form.submit "Filter", class: "bg-gray-800 text-white rounded-md p-2 cursor-pointer mt-2" %>
    <% end %>
    <%= form_with url: category_path(@category), method: :get, class: "flex flex-col" do |form| %>
      <%= form.submit "Clear", class: "bg-gray-800 text-white rounded-md p-2 cursor-pointer mt-2" %>
    <% end %>

  </div>
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @products.empty? %>
      <p class="text-2xl text-left text-gray-800">No products found</p>
    <% else %>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="overflow-hidden bg-white shadow-lg rounded-lg transform transition-transform hover:scale-105 w-64 h-80">
            <%= product.images.first ? image_tag(product.images.first.variant(:medium), class: "w-full h-48 object-cover rounded-t-lg") : image_tag("https://via.placeholder.com/70", class: "w-full h-48 object-cover rounded-t-lg") %>
            <div class="p-2 flex justify-between items-center relative h-32">
              <div class="text-lg text-gray-700">
                <%= product.name %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
